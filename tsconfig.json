{
	"compileOnSave": false,
	"compilerOptions": {
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"noImplicitAny": false,
		"target": "es2018",
		"types": ["node"],
		"typeRoots": ["node_modules/@types"],
		"lib": ["es7", "es6", "dom", "esnext"],
		"module": "es2020",
		"baseUrl": "./"
	}
}
